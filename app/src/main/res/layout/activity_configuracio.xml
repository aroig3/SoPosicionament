<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Configuracio">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <Space
            android:layout_width="match_parent"
            android:layout_height="37dp" />

        <TextView
            android:id="@+id/titol"
            android:layout_width="match_parent"
            android:layout_height="54dp"
            android:background="#86a99c"
            android:fontFamily="sans-serif-smallcaps"
            android:gravity="center"
            android:text="CONFIGURACIÓ"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:textSize="24sp" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="53dp" />

        <TextView
            android:id="@+id/titol2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FFFFFF"
            android:fontFamily="sans-serif-smallcaps"
            android:gravity="center"
            android:text="Apaga o encén la música"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:textSize="20sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Space
                android:layout_width="307dp"
                android:layout_height="144dp"
                android:layout_weight="1" />

            <ImageButton
                android:id="@+id/botoVolum"
                android:layout_width="165dp"
                android:layout_height="143dp"
                app:srcCompat="@drawable/encendre_so" />

            <Space
                android:layout_width="307dp"
                android:layout_height="144dp"
                android:layout_weight="1" />
        </LinearLayout>

        <Space
            android:layout_width="match_parent"
            android:layout_height="37dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="147dp"
            android:orientation="horizontal">

            <Space
                android:layout_width="307dp"
                android:layout_height="144dp"
                android:layout_weight="1" />

            <ImageButton
                android:id="@+id/botomenysVolum"
                android:layout_width="165dp"
                android:layout_height="143dp"
                app:srcCompat="@drawable/apagar_so" />

            <Space
                android:layout_width="307dp"
                android:layout_height="144dp"
                android:layout_weight="1" />
        </LinearLayout>

        <Space
            android:layout_width="match_parent"
            android:layout_height="69dp" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>